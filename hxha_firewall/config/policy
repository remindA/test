config policy
    option  name        "all trust can access fw"
    option  type        local
    option  zone_src    trust
    option  target      accept

option policy
    option  name        "all trust can only access fw:80"
    option  type        local
    option  zone_src    trust
    option  dports      80
    option  target      accept

option policy
    option  name        "only 192.168.2.100 in trust can only access fw:80"
    option  type        local
    option  zone_src    trust
    option  s           192.168.2.100
    option  dports      80
    option  target      accept


option policy
    option  name        "all trust can access internet(Need SNAT)"
    option  type        forward
    option  zone_src    trust
    option  zone_dst    untrust
    option  target      accept

option  policy
    option  name        "internet can access dmz:80(Need DNAT)"
    option  type        forward
    option  zone_src    untrust
    option  zone_dst    dmz
    option  d           192.168.1.10
    option  dports      80
    option  target      accept
